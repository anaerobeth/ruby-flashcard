#q = "The exception object passed to #raise"
#a = "$!"

question_pool = ["The exception object passed to #raise",
"The stack backtrace generated by the last exception raised"]

answer_pool = ["$!", "$@"]

[0,1].each do |num|
  q = question_pool[num]
  a = answer_pool[num]

  puts q
  response = gets.chomp()
  if response == a
    puts "Correct"
  else
    puts "The answer is: #{a}"
  end
end

